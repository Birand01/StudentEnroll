@model Candidate
<div>
        <h3 class="display-4">Congratulations @Model.FullName</h3>
        <p class="lead">Your application Has Been <mark>Accepted</mark> Successfully..</p>
        </hr>

        <blockquote class="blockquote">
            You have enrolled to @Model.SelectedCourse course.
        </blockquote>
        <p class="text-muted">You applied @Model.ApplyAt.</p>

        <div class="btn-group">
            <a class="btn btn-outline-success" asp-action="Index">Applications</a>
            <a class="btn btn-success" asp-action="Index" 
             asp-controller="Home">Home</a>
        </div>
</div>