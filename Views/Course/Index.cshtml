@model IEnumerable<Candidate>

  @if(Model.Count()>0)
  {
    <h6 class="display-6">
        Applications.(@Model.Count())
    </h6>
    <table class="table table-hover table-stripped">
        <thead>
            <tr>
                <th>E-Mail</th>
                <th>Full Name</th>
                <th>Apply At</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Candidate candidate in Model)
            {
                <tr>
                    <th>@candidate.Email</th>
                    <th>@candidate.FullName</th>
                    <th>@candidate.ApplyAt</th>
                    <th>@candidate.SelectedCourse</th>
                </tr>
            }
        </tbody>

    </table>
   
  }
  else
  {
    <div class="alert alert-info">
        There is no applications.Please click here to
        <a class="alert link" asp-action="Apply">apply.</a>
    </div>
  }

